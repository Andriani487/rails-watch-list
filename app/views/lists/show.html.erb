<h2><%= @list.name %></h2>

<div class="row">
  <% @list.bookmarks.each do |bm| %>
    <div class="col-md-4">
      <div class="col-mb-3">
        <%= image_tag(bm.movie.poster_url.presence || "default_poster.jpg", alt: bm.movie.title, class: "card-img-top") %>
        <div class="card-body">
        <h5 class="card-title"><%= bm.movie.title %></h5>
        <p class="card-text"<%= bm.comment %>></p>
        <%= button_to "Delete", bookmark_path(bm),
          method: :delete,
          data: { confirm: "Are you sure?" },
          class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
